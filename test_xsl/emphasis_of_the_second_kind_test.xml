<!DOCTYPE utfx:tests PUBLIC "-//UTF-X//DTD utfx-tests 1.0//EN" "utfx_tests.dtd">
<utfx:tests xmlns:utfx="http://utfx.org/test-definition"
  xmlns:dtb="http://www.daisy.org/z3986/2005/dtbook/"
  xmlns:brl="http://www.daisy.org/z3986/2009/braille/">
  <utfx:stylesheet src="xsl/dtbook2sbsform.xsl"/>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
  <!-- tests for emphasis of the second kind ("Hervorhebung zweiter Art")     -->
  <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
  <utfx:test>
    <utfx:name>test for emph2 in one word</utfx:name>
    <utfx:assert-equal>
      <utfx:source>
        <dtb:em xml:lang="de" brl:render="emph2">bla</dtb:em>
      </utfx:source>
      <utfx:expected>!_BLA</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>

  <utfx:test>
    <utfx:name>test for emph2 in several words</utfx:name>
    <utfx:assert-equal>
      <utfx:source>
        <dtb:em xml:lang="de" brl:render="emph2">bla bla</dtb:em>
      </utfx:source>
      <utfx:expected>!!_BLA BLA!.</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>

  <utfx:test>
    <utfx:name>test for emph2 mixed with emph at the beginning</utfx:name>
    <utfx:assert-equal>
      <utfx:source>
        <stub  xml:lang="de"><dtb:em brl:render="emph2">bla</dtb:em>bla</stub>
      </utfx:source>
      <utfx:expected>!_BLA!.BLA</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>

  <utfx:test>
    <utfx:name>test for emph2 mixed with emph at the end</utfx:name>
    <utfx:assert-equal>
      <utfx:source>
        <stub  xml:lang="de">bla<dtb:em brl:render="emph2">bla</dtb:em></stub>
      </utfx:source>
      <utfx:expected>BLA!_BLA</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>

  <utfx:test>
    <utfx:name>test for emph2 mixed with emph inside</utfx:name>
    <utfx:assert-equal>
      <utfx:source>
        <stub  xml:lang="de">bla<dtb:em brl:render="emph2">bla</dtb:em>bla</stub>
      </utfx:source>
      <utfx:expected>BLA!_BLA!.BLA</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>

</utfx:tests>
