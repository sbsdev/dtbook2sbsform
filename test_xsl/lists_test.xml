  <utfx:test>
    <utfx:name>list with brl:class attr</utfx:name>
    <utfx:assert-equal>
      <utfx:source>
        <stub xml:lang="de">
	  <dtb:list brl:class="foo" type="pl"></dtb:list>
	  <dtb:list brl:class="foo" type="ul"></dtb:list>
	  <dtb:list brl:class="foo" type="ol"></dtb:list>
        </stub>
      </utfx:source>
      <utfx:expected>
y PLISTb_foo

y PLISTe_foo

y ULISTb_foo

y ULISTe_foo

y OLISTb_foo

y OLISTe_foo

      </utfx:expected>
    </utfx:assert-equal>
  </utfx:test>

  <utfx:test>
    <utfx:name>li with brl:class attr</utfx:name>
    <utfx:assert-equal>
      <utfx:source>
        <stub xml:lang="de">
	  <dtb:li brl:class="foo"/>
        </stub>
      </utfx:source>
      <utfx:expected>
y LI_foo

      </utfx:expected>
    </utfx:assert-equal>
  </utfx:test>

  <utfx:test>
    <utfx:name>Preformatted lists</utfx:name>
    <utfx:assert-equal>
      <utfx:source>
        <stub xml:lang="de">
	<dtb:list type="pl">
          <dtb:li>1. bla bla</dtb:li>
          <dtb:li>2. bla bla</dtb:li>
          <dtb:li>3. bla bla
            <dtb:list type="pl">
              <dtb:li>a) blo blo
                <dtb:list type="pl">
                  <dtb:li>i. ble ble</dtb:li>
                  <dtb:li>ii. ble ble</dtb:li>
                </dtb:list>
              </dtb:li>
              <dtb:li>b) blo blo</dtb:li>
            </dtb:list>
          </dtb:li>
          <dtb:li>4. bla bla
            <dtb:list type="pl">
              <dtb:li>a) blo blo
                <dtb:list type="pl">
                  <dtb:li>i. ble ble</dtb:li>
                  <dtb:li>ii. ble ble</dtb:li>
                </dtb:list>
              </dtb:li>
              <dtb:li>b) blo blo</dtb:li>
            </dtb:list>
          </dtb:li>
          <dtb:li>5. bla bla</dtb:li>
        </dtb:list>
        </stub>
      </utfx:source>
      <utfx:expected>y PLISTb

y LI
 #A. BLA BLA

y LI
 #B. BLA BLA

y LI
 #C. BLA BLA 
y PLISTb

y LI
 'A= BLO BLO 
y PLISTb

y LI
 I. BLE BLE

y LI
 II. BLE BLE

y PLISTe
 

y LI
 'B= BLO BLO

y PLISTe
 

y LI
 #D. BLA BLA 
y PLISTb

y LI
 'A= BLO BLO 
y PLISTb

y LI
 I. BLE BLE

y LI
 II. BLE BLE

y PLISTe
 

y LI
 'B= BLO BLO

y PLISTe
 

y LI
 #E. BLA BLA

y PLISTe</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>

  <utfx:test>
    <utfx:name>Unordered lists</utfx:name>
    <utfx:assert-equal>
      <utfx:source>
        <stub xml:lang="de">
	<dtb:list type="ul">
          <dtb:li>bla bla</dtb:li>
          <dtb:li>bla bla</dtb:li>
          <dtb:li>bla bla
            <dtb:list type="ul">
              <dtb:li>blo blo
                <dtb:list type="ul">
                  <dtb:li>ble ble</dtb:li>
                  <dtb:li>ble ble</dtb:li>
                </dtb:list>
              </dtb:li>
              <dtb:li>blo blo</dtb:li>
            </dtb:list>
          </dtb:li>
          <dtb:li>bla bla
            <dtb:list type="ul">
              <dtb:li>blo blo
                <dtb:list type="ul">
                  <dtb:li>ble ble</dtb:li>
                  <dtb:li>ble ble</dtb:li>
                </dtb:list>
              </dtb:li>
              <dtb:li>blo blo</dtb:li>
            </dtb:list>
          </dtb:li>
          <dtb:li>bla bla</dtb:li>
        </dtb:list>
        </stub>
      </utfx:source>
      <utfx:expected>y ULISTb

y LI
 '- BLA BLA

y LI
 '- BLA BLA

y LI
 '- BLA BLA 
y ULISTb

y LI
 !- BLO BLO 
y ULISTb

y LI
 '- BLE BLE

y LI
 '- BLE BLE

y ULISTe
 

y LI
 !- BLO BLO

y ULISTe
 

y LI
 '- BLA BLA 
y ULISTb

y LI
 !- BLO BLO 
y ULISTb

y LI
 '- BLE BLE

y LI
 '- BLE BLE

y ULISTe
 

y LI
 !- BLO BLO

y ULISTe
 

y LI
 '- BLA BLA

y ULISTe</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>
  
</utfx:tests>
