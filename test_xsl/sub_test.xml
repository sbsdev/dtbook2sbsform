<!DOCTYPE utfx:tests PUBLIC "-//UTF-X//DTD utfx-tests 1.0//EN" "utfx_tests.dtd">
<utfx:tests xmlns:utfx="http://utfx.org/test-definition"
  xmlns:dtb="http://www.daisy.org/z3986/2005/dtbook/"
  xmlns:brl="http://www.daisy.org/z3986/2009/braille/">
  <utfx:stylesheet src="xsl/dtbook2sbsform.xsl"/>

  <utfx:test>
    <utfx:name>Sup</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
        <stub xml:lang="de">
	  <dtb:sup>23</dtb:sup>, x<dtb:sup>2</dtb:sup>, x<dtb:sup>-2</dtb:sup>, (2<dtb:sup>23</dtb:sup>), (x<dtb:sup>2</dtb:sup>), (x<dtb:sup>-2</dtb:sup>)
	</stub>
      </utfx:source>
      <utfx:expected>
0#BC, 'X0#B, 'X0-#B, =#B0#BC=, ='X0#B=, ='X0-#B=
</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>

  <utfx:test>
    <utfx:name>Sub</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
        <stub xml:lang="de">
	<dtb:abbr>CO</dtb:abbr><dtb:sub>2</dtb:sub>, <dtb:abbr>H</dtb:abbr><dtb:sub>2</dtb:sub><dtb:abbr>O</dtb:abbr>, (<dtb:abbr>CO</dtb:abbr><dtb:sub>2</dtb:sub>)
	</stub>
      </utfx:source>
      <utfx:expected>
&gt;CO1#B, &gt;H1#B&gt;O, =&gt;CO1#B=
</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>

</utfx:tests>
