<!DOCTYPE utfx:tests PUBLIC "-//UTF-X//DTD utfx-tests 1.0//EN" "utfx_tests.dtd">
<utfx:tests xmlns:utfx="http://utfx.org/test-definition"
  xmlns:dtb="http://www.daisy.org/z3986/2005/dtbook/"
  xmlns:brl="http://www.daisy.org/z3986/2009/braille/">
  <utfx:stylesheet src="xsl/dtbook2sbsform.xsl"/>

  <utfx:test>
    <utfx:name>p with linenum span</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
	<dtb:p xml:lang="de">
	  <dtb:span class='linenum'>5</dtb:span>A Man of Many Styles
	</dtb:p>
      </utfx:source>
      <utfx:expected>
y P_LN
  bE| 'A M OF M+'Y ]'YL%

</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>

  <utfx:test>
    <utfx:name>p with linenum span in the middle</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
	<dtb:p xml:lang="de">A Man of <dtb:span class='linenum'>5</dtb:span>Many Styles
	</dtb:p>
      </utfx:source>
      <utfx:expected>
y P_LN
 | 'A M OF 
y P_LN_noi
 bE| M+'Y ]'YL%

</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>

   <utfx:test>
    <utfx:name>p with linenum span in the middle with em</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
	<dtb:p xml:lang="de">
	  <dtb:em>A Man of </dtb:em><dtb:span class='linenum'>5</dtb:span>Many Styles
	</dtb:p>
      </utfx:source>
      <utfx:expected>
y P_LN
 |  __'A M OF '.
y P_LN_noi
 bE| M+'Y ]'YL%

</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>

 <utfx:test>
    <utfx:name>p with multiple linenum span in the middle</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
	<dtb:p xml:lang="de">
          A Man of <dtb:span class='linenum'>5</dtb:span>Many <dtb:span class='linenum'>10</dtb:span>Styles
	</dtb:p>
      </utfx:source>
      <utfx:expected>
y P_LN
 |  'A M OF 
y P_LN_noi
 bE| M+'Y 
y P_LN_noi
 AJ| ]'YL%

</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>

  <utfx:test>
    <utfx:name>p with linenum span with precedingemptyline</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
	<dtb:p xml:lang="de" class="precedingemptyline">
	  <dtb:span class='linenum'>5</dtb:span>A Man of Many Styles
	</dtb:p>
      </utfx:source>
      <utfx:expected>
y BLANK
y P_LN
  bE| 'A M OF M+'Y ]'YL%

</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>

</utfx:tests>
