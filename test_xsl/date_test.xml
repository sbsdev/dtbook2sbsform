<!DOCTYPE utfx:tests PUBLIC "-//UTF-X//DTD utfx-tests 1.0//EN" "utfx_tests.dtd">
<utfx:tests xmlns:utfx="http://utfx.org/test-definition"
  xmlns:dtb="http://www.daisy.org/z3986/2005/dtbook/"
  xmlns:brl="http://www.daisy.org/z3986/2009/braille/">
  <utfx:stylesheet src="xsl/dtbook2sbsform.xsl"/>

  <utfx:test>
    <utfx:name>Date normal</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
        <dtb:p xml:lang="de"><brl:date value="1911-11-11">11.11.1911</brl:date></dtb:p>
      </utfx:source>
      <utfx:expected>
y P
 #,,AA#AIAA</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>
  
  <utfx:test>
    <utfx:name>Date in Klammern</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
        <dtb:p xml:lang="de">(<brl:date value="1911-11-11">11.11.1911</brl:date>)</dtb:p>
      </utfx:source>
      <utfx:expected>
y P
 =#,,AA#AIAA'=</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>
  
  <utfx:test>
    <utfx:name>Date und danach Semikolon</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
        <dtb:p xml:lang="de"><brl:date value="1911-11-11">11.11.1911</brl:date>;</dtb:p>
      </utfx:source>
      <utfx:expected>
y P
 #,,AA#AIAA';</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>
  
  <utfx:test>
    <utfx:name>Date partiell normal</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
        <dtb:p xml:lang="de"><brl:date value="--11-11">11.11.</brl:date></dtb:p>
      </utfx:source>
      <utfx:expected>
y P
 #,,AA</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>
  
  <utfx:test>
    <utfx:name>Date partiell in Klammern</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
        <dtb:p xml:lang="de">(<brl:date value="--11-11">11.11.</brl:date>)</dtb:p>
      </utfx:source>
      <utfx:expected>
y P
 =#,,AA'=</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>
  
  <utfx:test>
    <utfx:name>Date partiell und danach Semikolon</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
        <dtb:p xml:lang="de"><brl:date value="--11-11">11.11.</brl:date>;</dtb:p>
      </utfx:source>
      <utfx:expected>
y P
 #,,AA';</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>
  
  
</utfx:tests>
