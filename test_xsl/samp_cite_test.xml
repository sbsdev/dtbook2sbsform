<!DOCTYPE utfx:tests PUBLIC "-//UTF-X//DTD utfx-tests 1.0//EN" "utfx_tests.dtd">
<utfx:tests xmlns:utfx="http://utfx.org/test-definition"
  xmlns:dtb="http://www.daisy.org/z3986/2005/dtbook/"
  xmlns:brl="http://www.daisy.org/z3986/2009/braille/">
  <utfx:stylesheet src="xsl/dtbook2sbsform.xsl"/>

  <utfx:test>
    <utfx:name>Samp block</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
	<dtb:level1 xml:lang="de">
          <dtb:samp>Foo</dtb:samp>
	</dtb:level1>
      </utfx:source>
      <utfx:expected>
y LEVEL1b
.xNOPAGENUM
xxx Was originally a dtb:samp
y P
 FOO
y LEVEL1e
</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>

  <utfx:test>
    <utfx:name>Samp block</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
	<dtb:div brl:class="foo" xml:lang="de">
          <dtb:samp>Foo</dtb:samp>
	</dtb:div>
      </utfx:source>
      <utfx:expected>
y DIVb_foo
xxx Was originally a dtb:samp
y P
 FOO
y DIVe_foo
</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>

  <utfx:test>
    <utfx:name>Samp inline (inside p)</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
	<dtb:p xml:lang="de">Foo <dtb:samp>Bar</dtb:samp> Baz</dtb:p>
      </utfx:source>
      <utfx:expected>
y P
 FOO BAR BAZ
</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>

  <utfx:test>
    <utfx:name>Samp inline (inside th)</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
	<dtb:th xml:lang="de">Foo <dtb:samp>Bar</dtb:samp> Baz</dtb:th>
      </utfx:source>
      <utfx:expected>
FOO BAR BAZ
</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>

  <utfx:test>
    <utfx:name>Samp inline (inside td)</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
	<dtb:td xml:lang="de">Foo <dtb:samp>Bar</dtb:samp> Baz</dtb:td>
      </utfx:source>
      <utfx:expected>
FOO BAR BAZ
</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>

  <utfx:test>
    <utfx:name>Samp inline (inside li)</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
	<dtb:li xml:lang="de">Foo <dtb:samp>Bar</dtb:samp> Baz</dtb:li>
      </utfx:source>
      <utfx:expected>
y LI
 FOO BAR BAZ
</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>

</utfx:tests>
