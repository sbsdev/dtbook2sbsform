<!DOCTYPE utfx:tests PUBLIC "-//UTF-X//DTD utfx-tests 1.0//EN" "utfx_tests.dtd">
<utfx:tests xmlns:utfx="http://utfx.org/test-definition"
  xmlns:dtb="http://www.daisy.org/z3986/2005/dtbook/"
  xmlns:brl="http://www.daisy.org/z3986/2009/braille/">
  <utfx:stylesheet src="xsl/dtbook2sbsform.xsl"/>

  <utfx:test>
    <utfx:name>Translation of linegroup</utfx:name>
    <utfx:assert-equal>
      <utfx:source>
	<dtb:linegroup xml:lang="de"></dtb:linegroup>
      </utfx:source>
      <utfx:expected>
y LINEGRb
 
y LINEGRe
      </utfx:expected>
    </utfx:assert-equal>
  </utfx:test>

  <utfx:test>
    <utfx:name>Translation of linegroup with brl:class attr</utfx:name>
    <utfx:assert-equal>
      <utfx:source>
	<dtb:linegroup xml:lang="de" brl:class="foo"></dtb:linegroup>
      </utfx:source>
      <utfx:expected>
y LINEGRb_foo
 
y LINEGRe_foo
      </utfx:expected>
    </utfx:assert-equal>
  </utfx:test>

  <utfx:test>
    <utfx:name>Translation of line</utfx:name>
    <utfx:assert-equal>
      <utfx:source>
	<dtb:line xml:lang="de"></dtb:line>
      </utfx:source>
      <utfx:expected>
y LINEb
 
y LINEe
      </utfx:expected>
    </utfx:assert-equal>
  </utfx:test>

  <utfx:test>
    <utfx:name>Translation of line with brl:class attr</utfx:name>
    <utfx:assert-equal>
      <utfx:source>
	<dtb:line xml:lang="de" brl:class="foo"></dtb:line>
      </utfx:source>
      <utfx:expected>
y LINEb_foo
 
y LINEe_foo
      </utfx:expected>
    </utfx:assert-equal>
  </utfx:test>

  <utfx:test>
    <utfx:name>linenum</utfx:name>
    <utfx:assert-equal>
      <utfx:source>
	<dtb:linenum xml:lang="de">Foo</dtb:linenum>
      </utfx:source>
      <utfx:expected>FOO|
</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>

  <utfx:test>
    <utfx:name>Line with linenum</utfx:name>
    <utfx:assert-equal>
      <utfx:source>
	<dtb:line xml:lang="de"><dtb:linenum>6</dtb:linenum>DAS HIER IST EIN KLEINER TEST. ES GEHT DARUM.</dtb:line>
      </utfx:source>
      <utfx:expected>
y LINEb
 #F| D HR ] 6 KL67 TE]. % &amp;HT D)UM.
y LINEe
</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>

  <utfx:test>
    <utfx:name>Line with mixed lines</utfx:name>
    <utfx:assert-equal>
      <utfx:source>
	<dtb:line xml:lang="de"><dtb:linenum>6</dtb:linenum>DAS HIER IST EIN KLEINER TEST. ES GEHT DARUM.</dtb:line>
	<dtb:line xml:lang="de">DAS HIER IST EIN KLEINER TEST. ES GEHT DARUM.</dtb:line>
	<dtb:line xml:lang="de"><dtb:linenum>6</dtb:linenum>DAS HIER IST EIN KLEINER TEST. ES GEHT DARUM.</dtb:line>
      </utfx:source>
      <utfx:expected>
y LINEb
 #F| D HR ] 6 KL67 TE]. % &amp;HT D)UM.
y LINEe

y LINEb
 | D HR ] 6 KL67 TE]. % &amp;HT D)UM.
y LINEe

y LINEb
 #F| D HR ] 6 KL67 TE]. % &amp;HT D)UM.
y LINEe
</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>

  <utfx:test>
    <utfx:name>Poem with linenum</utfx:name>
    <utfx:assert-equal>
      <utfx:source>
	<dtb:poem xml:lang="de">
	  <dtb:line><dtb:linenum>6</dtb:linenum>DAS HIER IST EIN KLEINER TEST. ES GEHT DARUM.</dtb:line>
	</dtb:poem>
      </utfx:source>
      <utfx:expected>
y POEMb

y LINEb
 #F| D HR ] 6 KL67 TE]. % &amp;HT D)UM.
y LINEe

y POEMe
</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>


</utfx:tests>
