<!DOCTYPE utfx:tests PUBLIC "-//UTF-X//DTD utfx-tests 1.0//EN" "utfx_tests.dtd">
<utfx:tests xmlns:utfx="http://utfx.org/test-definition"
  xmlns:dtb="http://www.daisy.org/z3986/2005/dtbook/"
  xmlns:brl="http://www.daisy.org/z3986/2009/braille/">
  <utfx:stylesheet src="xsl/dtbook2sbsform.xsl"/>

  <utfx:test>
    <utfx:name>span with both class="brl:computer" and brl:grade</utfx:name>
    <!-- computer braille should have priority -->
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
        <stub xml:lang="de">
	  <dtb:span class="brl:computer" brl:grade="2">www.mann.ch</dtb:span>
        </stub>
      </utfx:source>
      <utfx:expected>'$WWW.MANN.CH</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>
  
  <utfx:test>
    <utfx:name>computer braille span inside other span</utfx:name>
    <utfx:assert-equal>
      <utfx:source>
        <stub xml:lang="de">
	  <dtb:span brl:grade="2">Man sagt
	  <dtb:span class="brl:computer">www.mann.ch</dtb:span>
	  </dtb:span>
        </stub>
      </utfx:source>
      <utfx:expected>M SGT '$WWW.MANN.CH</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>
  
</utfx:tests>
