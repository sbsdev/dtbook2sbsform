<!DOCTYPE utfx:tests PUBLIC "-//UTF-X//DTD utfx-tests 1.0//EN" "utfx_tests.dtd">
<utfx:tests xmlns:utfx="http://utfx.org/test-definition"
  xmlns:dtb="http://www.daisy.org/z3986/2005/dtbook/"
  xmlns:brl="http://www.daisy.org/z3986/2009/braille/">
  <utfx:stylesheet src="xsl/dtbook2sbsform.xsl"/>

  <utfx:test>
    <utfx:name>Senkrechter Strich (#1674)</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
        <stub xml:lang="de">bla|blo</stub>
      </utfx:source>
      <utfx:expected>BLA !- BLO</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>	
  
  <utfx:test>
    <utfx:name>Spitze Klammern (#1674)</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
        <stub xml:lang="de">&#x2329;...&#x232A;</stub>
      </utfx:source>
      <utfx:expected>!=...!=</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>	
  
  <utfx:test>
    <utfx:name>Geschweifte Klammern (#1674)</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
        <stub xml:lang="de">{...}</stub>
      </utfx:source>
      <utfx:expected>![...![</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>
  
  <utfx:test>
    <utfx:name>Rautezeichen (#1674)</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
        <stub xml:lang="de">Bla # Blo</stub>
      </utfx:source>
      <utfx:expected>BLA &quot;# BLO</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>
  
</utfx:tests>
