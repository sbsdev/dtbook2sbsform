<!DOCTYPE utfx:tests PUBLIC "-//UTF-X//DTD utfx-tests 1.0//EN" "utfx_tests.dtd">
<utfx:tests xmlns:utfx="http://utfx.org/test-definition"
  xmlns:dtb="http://www.daisy.org/z3986/2005/dtbook/"
  xmlns:brl="http://www.daisy.org/z3986/2009/braille/">
  <utfx:stylesheet src="xsl/dtbook2sbsform.xsl"/>

  <utfx:test>
    <utfx:name>num und dddd in em</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
        <dtb:p><dtb:em xml:lang="de"><brl:num role="ordinal">3.</brl:num> Dezember 2010</dtb:em>,</dtb:p>
      </utfx:source>
      <utfx:expected>
y P
 __#: DEZ[B7 #BJAJ'.,</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>
  
  <utfx:test>
    <utfx:name>num und dddd in em</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
        <dtb:p><dtb:em xml:lang="de">blabla <brl:num role="ordinal">13.</brl:num> Dezember 2010</dtb:em>,</dtb:p>
      </utfx:source>
      <utfx:expected>
y P
 __BLABLA #,: DEZ[B7 #BJAJ'.,</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>
  
  <utfx:test>
    <utfx:name>dddd in em</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
        <dtb:p><dtb:em xml:lang="de">Dezember 2010</dtb:em>,</dtb:p>
      </utfx:source>
      <utfx:expected>
y P
 __DEZ[B7 #BJAJ'.,</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>
  
  <utfx:test>
    <utfx:name>Ordnungszahl mit Komma</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
        <dtb:p><brl:num role="ordinal">3.</brl:num>,</dtb:p>
      </utfx:source>
      <utfx:expected>
y P
 #:',</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>
  
</utfx:tests>
