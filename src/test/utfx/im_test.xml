<!DOCTYPE utfx:tests PUBLIC "-//UTF-X//DTD utfx-tests 1.0//EN" "utfx_tests.dtd">
<utfx:tests xmlns:utfx="http://utfx.org/test-definition"
  xmlns:dtb="http://www.daisy.org/z3986/2005/dtbook/"
  xmlns:brl="http://www.daisy.org/z3986/2009/braille/">
  <utfx:stylesheet src="xsl/dtbook2sbsform.xsl"/>
  
  <utfx:test>
    <utfx:name>im</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
        <dtb:p xml:lang="de">Bla im Blo</dtb:p>
      </utfx:source>
      <utfx:expected>y P&#13; BLA - BLO</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>
  
  <utfx:test>
    <utfx:name>im</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
        <dtb:p xml:lang="de">Heim-Kino</dtb:p>
      </utfx:source>
      <utfx:expected>y P&#13; H3M-K*O</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>
  
  <utfx:test>
    <utfx:name>im</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
        <dtb:p xml:lang="de">Das Im-Buch-Lesen</dtb:p>
      </utfx:source>
      <utfx:expected>y P&#13; D IM-BU4-L%C</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>
  
  <utfx:test>
    <utfx:name>im</utfx:name>
    <utfx:stylesheet-params>
      <utfx:with-param name="contraction" select="2"/>
    </utfx:stylesheet-params>
    <utfx:assert-equal>
      <utfx:source>
        <dtb:p xml:lang="de">Das Konzentriert-Im-Buch-Lesen</dtb:p>
      </utfx:source>
      <utfx:expected>y P&#13; D KONZCTR0RT-IM-BU4-L%C</utfx:expected>
    </utfx:assert-equal>
  </utfx:test>
  
</utfx:tests>
