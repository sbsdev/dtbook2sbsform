<?xml version="1.0" encoding="utf-8"?>
<x:description xmlns:x="http://www.jenitennison.com/xslt/xspec"
               xmlns:dtb="http://www.daisy.org/z3986/2005/dtbook/"
               xmlns:brl="http://www.daisy.org/z3986/2009/braille/"
               stylesheet="../../main/resources/xml/linewrapper.xsl">
  
  <x:param name="FILL_COLUMN" select="10"/>
  
  <x:scenario label="Fill lines to a maximum of 10 characters, break lines on word boundaries, hang-indent wrapped lines with a blank">
    <x:call template="wrap-lines">
      <x:param name="text">
 aaaa bbbb ccc dd eee</x:param>
    </x:call>
    <x:expect label="wrapped">
 aaaa bbbb
 ccc dd
 eee
</x:expect>
  </x:scenario>
  
  <x:scenario label="Preserve newlines">
    <x:call template="wrap-lines">
      <x:param name="text">
aaaa bbbb
 cccc</x:param>
    </x:call>
    <x:expect label="wrapped">
aaaa bbbb
 cccc
</x:expect>
  </x:scenario>
  
  <x:scenario label="Collapse all other whitespace into a single blank">
    <x:call template="wrap-lines">
      <x:param name="text">
   aaa     bbbbb       ccc</x:param>
    </x:call>
    <x:expect label="wrapped">
 aaa bbbbb
 ccc
</x:expect>
  </x:scenario>
  
  <x:scenario label="Drop trailing whitespace">
    <x:call template="wrap-lines">
      <x:param name="text">
 aaaa bbbb   </x:param>
    </x:call>
    <x:expect label="wrapped">
 aaaa bbbb
</x:expect>
  </x:scenario>
  
</x:description>
